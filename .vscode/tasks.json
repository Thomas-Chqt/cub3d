{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Release",
			"type": "shell",
			"group": "build",
			"command": "make",
			"args": [
				"TARGET_TYPE=release",
				"all"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$gcc",
			"presentation": {
				"reveal": "silent",
				"close": true,
				"revealProblems": "onProblem"
			}
		},
		{
			"label": "Build Debug",
			"type": "shell",
			"group": "build",
			"command": "make",
			"args": [
				"TARGET_TYPE=debug",
				"all"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$gcc",
			"presentation": {
				"reveal": "silent",
				"close": true,
				"revealProblems": "onProblem"
			}
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": "make",
			"args": [
				"clean"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "silent",
				"close": true
			}
		},
		{
			"label": "FClean",
			"type": "shell",
			"command": "make",
			"args": [
				"fclean"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "silent",
				"close": true
			}
		},
		{
			"label": "Norminette",
			"type": "shell",
			"command": "norminette",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				{
					"owner": "Norminette",
					"fileLocation": [
						"autoDetect",
						"${workspaceFolder}"
					],
					"pattern": [
						{
							"regexp": "^(.*):\\s+(.*)$",
							"file": 1
						},
						{
							"regexp": "^(Notice|Error):\\s+(\\S+)\\s+\\(line:\\s+(\\d+),\\s+col:\\s+(\\d+)\\):\\s+(.*)$",
							"loop": true,
							"severity": 1,
							"code": 2,
							"line": 3,
							"column": 4,
							"message": 5
						}
					]
				},
				{
					"owner": "Norminette",
					"fileLocation": [
						"autoDetect",
						"${workspaceFolder}"
					],
					"pattern": [
						{
							"regexp": "^(.*):\\s+(.*)$",
							"file": 1
						},
						{
							"regexp": "^\\s+(Error):\\s+(.*)\\s+\\((\\d+),\\s+(\\d+)\\).*\\[(.*)\\]$",
							"loop": true,
							"severity": 1,
							"message": 2,
							"line": 3,
							"column": 4,
							"code": 5
						}
					]
				}
			],
			"presentation": {
				"reveal": "silent",
				"close": true
			}
		}
	]
}